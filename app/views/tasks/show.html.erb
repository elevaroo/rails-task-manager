<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed  %>
    <p><i class="far fa-check-square"></i> - Task is completed</p>
  <% else %>
    <p><i class="far fa-square"></i> - Task is not completed yet</p>
  <% end %>

<p><%= link_to 'Edit the task', edit_task_path%></p>

<p><%= link_to "Back to list", tasks_path %></p>
